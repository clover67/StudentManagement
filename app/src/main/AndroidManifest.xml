<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.studentdatamanagementsystem">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/peopleicon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Display"
                   android:label="Main Menu"/>
        <activity android:name=".add_user"
                    android:label="Add New Admin"/>
        <activity android:name=".ManagePage"
            android:label="Manage Student Data"/>
        <activity android:name=".SearchPage" />
        <activity android:name=".AddStudent"
            android:label="Add New Student"></activity>
    </application>

</manifest>
